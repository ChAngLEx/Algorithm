import turtle

turtle.shape('turtle')
turtle.mode('logo')
turtle.tracer(0)

turtle.pencolor('red')
turtle.dot(200)
turtle.pencolor('white')
turtle.dot(160)

turtle.penup()
turtle.goto(-35, 70)
turtle.pendown()

turtle.pensize(6)
turtle.pencolor('blue')
turtle.right(90)
turtle.fillcolor('while')
turtle.begin_fill()
for i in range(6):
    turtle.forward(60)
    turtle.left(60)
turtle.end_fill()
turtle.done()
